{
  "semi": false,
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "twigPrintWidth": 120,
  "twigAlwaysBreakObjects": false,
  "overrides": [
    {
      "files": ["*.yaml", "*.yml", "composer.*", "Makefile"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["Makefie"],
      "options": {
        "useTabs": true
      }
    }
  ]
}
